@model Persada.Fr.ModelView.TOURIS_TV_SUB_CATEGORY

@{
    ViewBag.Title = "Delete SubCategory";
}

<h2>@ViewBag.Title.</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Category
        </dt>
        <dd>
            @Model.CATEGORY_NAME
        </dd>

        <dt>
            Country
        </dt>

        <dd>
            @Model.COUNTRY_NAME
        </dd>

        <dt>
            Province Name
        </dt>

        <dd>
            @Model.PROVINCE_NAME
        </dd>

        <dt>
            City
        </dt>

        <dd>
            @Model.CITY_NAME
        </dd>

        <dt>
            District
        </dt>

        <dd>
            @Model.DISTRICT_NAME
        </dd>

        <dt>
            SubCategory
        </dt>

        <dd>
            @Model.SUB_CATEGORY_NAME
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Model.SUB_CATEGORY_DESCRIPTION
        </dd>

        <dt>
            Address
        </dt>

        <dd>
            @Model.ADDRESS
        </dd>


        <dt>
            Start Date
        </dt>

        <dd>
            @Model.START_TIME
        </dd>


        <dt>
            End Date
        </dt>

        <dd>
            @Model.END_TIME
        </dd>
        <dd>
            <img src="@Model.PHOTO_PATH" class="img-medium" />
        </dd>

    </dl>

    @using (Html.BeginForm("ActionDelete", "SubCategory", new { id = Model.ID }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
