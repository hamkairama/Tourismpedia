        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <hr />
            <div class="col-xs-5">
                <p><b>&copy; @DateTime.Now.Year - Tourismpedia</b></p>
            </div>
            <div class="col-xs-7">
                @{
                    foreach (TOURIS_TV_SOSMED item in CurrentUser.GetSosmedList())
                    {
                <a class="btn btn-social-icon btn-@item.ICON" href="@item.URL" target="_blank">
                    <span class="fa fa-@item.ICON"></span>
                </a>
                    }
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="modal fade" id="myModal" role="dialog">
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script src="~/Scripts/Helpers/Common.js"></script>
<script src="~/Scripts/Helpers/Modal.js"></script>
