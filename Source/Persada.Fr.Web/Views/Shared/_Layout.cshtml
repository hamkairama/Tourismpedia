@using Persada.Fr.CommonFunction;
@using Persada.Fr.ModelView;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/moment.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MTF GO!", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@ViewBag.IndexHome">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="@ViewBag.About">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="@ViewBag.Contact">@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @{
                        if (CurrentUser.IsSa())
                        {
                    <li class="@ViewBag.AreaSetup">
                        <a href="#" Class="dropdown-toggle" data-toggle="dropdown">Area Setup<b Class="caret"></b></a>
                        <ul Class="dropdown-menu">
                            <li class="@ViewBag.IndexCountry">
                                <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("Country", "Index", "Country")</a>
                            </li>
                            <li class="@ViewBag.IndexProvince">
                                <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("Province", "Index", "Province")</a>
                            </li>
                            <li class="@ViewBag.IndexCity">
                                <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("City", "Index", "City")</a>
                            </li>
                            <li class="@ViewBag.IndexDistrict">
                                <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("District", "Index", "District")</a>
                            </li>
                            <li class="@ViewBag.IndexVillage">
                                <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("Village", "Index", "Village")</a>
                            </li>
                        </ul>
                    </li>
                    <li class="@ViewBag.CategorySetup">
                        <a href="#" Class="dropdown-toggle" data-toggle="dropdown">Category Setup<b Class="caret"></b></a>
                        <ul Class="dropdown-menu">
                            <li class="@ViewBag.IndexCategory">
                                <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("Category", "Index", "Category")</a>
                            </li>
                            <li class="@ViewBag.IndexSubCategory">
                                <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("SubCategory", "Index", "SubCategory")</a>
                            </li>
                        </ul>
                    </li>
                    <li class="@ViewBag.MenuSetup">
                        <a href="#" Class="dropdown-toggle" data-toggle="dropdown">Menu Setup<b Class="caret"></b></a>
                        <ul Class="dropdown-menu">
                            @*<li class="@ViewBag.IndexMenu">
                                    <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("Menu", "Index", "Menu")</a>
                                </li>
                                <li class="@ViewBag.IndexRole">
                                    <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("Role", "Index", "Role")</a>
                                </li>
                                <li class="@ViewBag.IndexMenuRole">
                                    <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("MenuRole", "Index", "MenuRole")</a>
                                </li>*@
                            <li class="@ViewBag.IndexUser">
                                <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("User", "Index", "User")</a>
                            </li>
                            <li class="@ViewBag.IndexSlideshow">
                                <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("Slideshow", "Index", "Slideshow")</a>
                            </li>
                            <li class="@ViewBag.IndexSosmed">
                                <a href="#" Class="dropdown-toggle" data-toggle="dropdown">@Html.ActionLink("Sosmed", "Index", "Sosmed")</a>
                            </li>
                        </ul>
                    </li>
                        }
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="row">
        <br />
        <div class="col-xs-1">
            <a class="twitter-timeline" width="300" height="500" href="https://twitter.com/search?q=jakarta" data-widget-id="964578559883816960"></a>
            <iframe width="200" height="200" src="https://www.youtube.com/embed/PxucQe-3gMY"></iframe>
        </div>
        <div class="col-xs-10">
            @RenderBody()
        </div>

        <div class="col-xs-1">
            <iframe src="https://snapwidget.com/embed/509301" class="snapwidget-widget" allowTransparency="true" frameborder="0" scrolling="no" style="border:none; overflow:hidden; width:390px; height:390px"></iframe>
